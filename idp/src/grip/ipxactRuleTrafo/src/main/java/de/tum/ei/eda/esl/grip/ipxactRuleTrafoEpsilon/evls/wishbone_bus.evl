context EObject{
	
	constraint size {		
		check : self->size() = 1 
	}
	
	constraint type {
		guard: self.satisfies("size")		
		check : ComponentInstanceType.all.size() = 1		
	}

}

context ComponentInstanceType{

	constraint ref {
		check: self.componentRef.name = "wishbone_bus"
	}
	
	constraint lib {
		check: self.componentRef.library = "soc"
	}
}